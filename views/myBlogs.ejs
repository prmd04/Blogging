<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <title>My Blogs</title>
  </head>

  <body class="bg-gray-900 text-white min-h-screen">
    <%- include('partials/topbar') %> <% if (message) { %>
    <div
      id="flash-message"
      class="max-w-3xl mx-auto mt-6 text-lg font-semibold text-green-400 bg-green-900/50 p-3 rounded-lg border border-green-600 shadow-md text-center"
    >
      <%= message %>
    </div>
    <% } %>

    <div class="text-center mt-10">
      <a
        href="/addblog"
        class="inline-block w-3/4 md:w-1/3 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-4 rounded-lg shadow-md transition duration-300 uppercase tracking-wide text-lg"
      >
        Add Blog +
      </a>
    </div>

    <div class="max-w-4xl mx-auto mt-12 space-y-6 px-4">
      <% if (blogData && blogData.length > 0) { %> <% blogData.forEach(blog => {
      %>
      <div class="bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-blue-400 mb-2"><%= blog.title %></h2>

        <p class="text-gray-300 leading-relaxed mb-4"><%= blog.body %></p>

        <div class="flex gap-4">
          <a
            href="/editblog/<%= blog._id %>"
            class="px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-black font-semibold rounded-md transition"
          >
            Edit
          </a>

          <!-- Delete -->
          <form
            action="/deleteblog/<%= blog._id %>"
            method="POST"
            onsubmit="return confirm('Delete this blog?');"
          >
            <input type="hidden" name="id" value="<%= blog._id %>" />
            <button class="bg-red-600 px-4 py-2 rounded">Delete</button>
          </form>
        </div>
      </div>
      <% }) %> <% } else { %>
      <p class="text-gray-400 text-center mt-10">
        No blogs found. Start writing ✍️
      </p>
      <% } %>
    </div>

    <script>
      const msg = document.getElementById("flash-message");
      if (msg) {
        setTimeout(() => msg.remove(), 2500);
      }
    </script>
  </body>
</html>
